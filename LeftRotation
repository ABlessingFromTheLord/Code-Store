def leftrotation(v, n):
    #create a binary reresentation of the number v
    #we store it in array binary in little endian
    binary = []

    while v > 0:
        a = v % 2
        binary.append(a)
        v //= 2

    #rotation algorithm using a temporary array
    tempArray = [0 for x in range(len(binary))]
    i = len(tempArray)-1

    while i > 0:
        tempArray[i] = binary[i-1]
        i -= 1

    tempArray[0] = binary[len(binary)-1]

    return tempArray

print(leftrotation(24, 1))
