def leftrotation(v, n):
    #create a binary reresentation of the number v
    #we store it in array binary in little endian
    binary = []

    while v > 0:
        a = v % 2
        binary.append(a)
        v //= 2
    binary.reverse()

    while n > 0:
        #rotation algorithm using a temporary array
        tempArray = []
        i = 1

        while i < len(binary):
            tempArray.append(binary[i])
            i += 1
        tempArray.append(binary[0])

        binary = tempArray[:]
        tempArray.clear()

        n -= 1

    return binary

print(leftrotation(24, 5))
