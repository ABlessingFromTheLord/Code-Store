def leftrotation(v, n):
    #create a binary reresentation of the number v
    #we store it in array binary in little endian
    binary = []

    while v > 0:
        a = v % 2
        binary.append(a)
        v //= 2
    binary.reverse()

    # rotation algorithm using a temporary array
    while n > 0:
        tempArray = []
        i = 1

        while i < len(binary):
            tempArray.append(binary[i])
            i += 1
        tempArray.append(binary[0])

        binary = tempArray[:]
        tempArray.clear()

        n -= 1

    #recreating a decimal from a binary array
    v = 0
    exp = len(binary)-1
    for i in range (0, len(binary)):
        v += binary[i] * (2**exp)
        exp -= 1

    return v
