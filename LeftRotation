def leftrotation(v, n):
    #create a binary reresentation of the number v
    #we store it in array binary in little endian
    binary = []

    while v > 0:
        a = v % 2
        binary.append(a)
        v //= 2
    binary.reverse()

    while n > 0:
        #rotation algorithm using a temporary array
        tempArray = binary[:]
        i = 0

        while i < len(tempArray)-1:
            tempArray[i] = binary[i+1]
            i += 1
        tempArray[4] = binary[0]

        n -= 1

    return tempArray

print(leftrotation(24, 2))
